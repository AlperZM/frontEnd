// SASS can use variables like JS. Variables start whit "$" / SASS "$" ile başlayan değişkenler kullanır.
//$main-fonts: Arial, sans-serif; $headings-color: green;
//h1 {font-family: $main-fonts; color: $headings-color; }
//
//nesting css
  .blog-post {
h1{
    text-align: center;
    color: blue;
}
p {
    font-size: 20px;
 }
 }
// mixin => functions for CSS / mixin => CSS için fonksiyonlar.
@mixin box-shadow($x, $y, $blur, $c){ 
  -webkit-box-shadow: $x $y $blur $c;
  -moz-box-shadow: $x $y $blur $c;
  -ms-box-shadow: $x $y $blur $c;
  box-shadow: $x $y $blur $c;
}
div {
  @include box-shadow(0px, 0px, 4px, #fff); //@include must use/@include ile kullanılmalı.
}

//@if - @else logical operators / @if @else mantıksal operatörler
 @mixin border-stroke($val) {
    @if $val == light {
      border: 1px solid black;
    }
    @else if $val == medium {
      border: 3px solid black;
    }
    @else if $val == heavy {
      border: 6px solid black;
    }
    @else {
      border: none;
    }
  }

//@for loop for Css / @for Css döngüleri
@for $i from 1 through 12 {
  .col-#{$i} { width: 100%/12 * $i; }
}

//@each like array.map in JS


